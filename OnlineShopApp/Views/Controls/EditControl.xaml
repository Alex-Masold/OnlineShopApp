<UserControl x:Class="OnlineShopApp.Views.Controls.EditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OnlineShopApp.Views.Controls.Templates"
             xmlns:parent="clr-namespace:OnlineShop.Views.Pages"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="CategoryTemplate">
            <StackPanel>
                <TextBlock Foreground="#C9C9C9"
                           Text="Выбранная Категория"
                           Margin="5,0,5,5" />
                <WrapPanel>
                    <Label Content="Id :"
                           Target="{Binding ElementName=Id}"
                           Foreground="#C9C9C9"
                           Margin="5,0,5,0" />
                    <TextBlock x:Name="Id"
                               Text="{Binding IdCategory, UpdateSourceTrigger=PropertyChanged}"
                               Foreground="#C9C9C9"
                               Margin="0,0,5,0"
                               VerticalAlignment="Center" />
                </WrapPanel>

                <WrapPanel>
                    <Label Content="Название :"
                           Target="{Binding ElementName=Name}"
                           Foreground="#C9C9C9"
                           Margin="5,0,5,5" />
                    <TextBox x:Name="Name"
                             Text="{Binding NameCategory, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="#C9C9C9"
                             Background="Transparent"
                             SelectionBrush="#FFCACACA"
                             Padding="2"
                             VerticalAlignment="Top">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="GotFocus">
                                <i:InvokeCommandAction Command="{Binding DataContext.GotFocusCommand, RelativeSource={RelativeSource AncestorType={x:Type parent:AdminView}}}"
                                                       CommandParameter="{Binding ElementName=Name}" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="LostFocus">
                                <i:InvokeCommandAction Command="{Binding DataContext.LostFocusCommand, RelativeSource={RelativeSource AncestorType={x:Type parent:AdminView}}}"
                                                       CommandParameter="{Binding ElementName=Name}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </WrapPanel>
                
            </StackPanel>
        </DataTemplate>

